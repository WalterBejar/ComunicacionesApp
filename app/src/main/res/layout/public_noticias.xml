<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_alignParentRight="true"

    card_view:cardElevation="5dp"


    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        >


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:id="@+id/icon_inicio"
            android:tint = "@color/colorPrimary"

            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_inicio"
            android:layout_toRightOf="@+id/icon_inicio"
            android:layout_toEndOf="@+id/icon_inicio"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/titulo_noticia"
            android:textSize="16sp"
            tools:text="Titulo"

            android:textStyle="normal|bold" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo_noticia"
            android:layout_alignLeft="@+id/titulo_noticia"
            android:layout_alignStart="@+id/titulo_noticia"
            android:id="@+id/txfecha"
            android:textSize="12sp"
            tools:text="Fecha"

            />





        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imag_not"
            android:focusable="false"
            android:src="@drawable/splash_logo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/txfecha"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txdesc"
            android:textSize="15dp"
            android:layout_below="@+id/imag_not"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2sp"
            android:layout_marginEnd="20dp"
            tools:text="descripcion"

            android:layout_alignLeft="@+id/imag_not"
            android:layout_alignStart="@+id/imag_not"
            android:layout_marginRight="20dp" />

    </RelativeLayout>








</android.support.v7.widget.CardView>
