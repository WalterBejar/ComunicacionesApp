<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_vid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActVid"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:background="@color/colorPrimary" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"

        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="17dp"
            android:id="@+id/icon_viddet"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:id="@+id/txv_publicador"
            android:textColor="@color/background_footer"
            android:layout_alignTop="@+id/icon_viddet"
            android:layout_toRightOf="@+id/icon_viddet"
            android:layout_toEndOf="@+id/icon_viddet" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/icon_viddet"
            android:textColor="@color/cardview_dark_background"
            android:layout_alignLeft="@+id/icon_viddet"
            android:id="@+id/vid_titulo"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvfecha"
            android:textColor="@color/background_footer"
            android:layout_below="@+id/txv_publicador"
            android:layout_alignStart="@+id/txv_publicador" />

        <GridView
            android:id="@+id/grid_vid"
            android:columnWidth="120dp"
            android:horizontalSpacing="@dimen/espacio_grilla"
            android:numColumns="1"
            android:padding="@dimen/espacio_grilla"
            android:verticalSpacing="@dimen/espacio_grilla"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/vid_titulo"
            />

    </RelativeLayout>
</FrameLayout>

</LinearLayout>
